{
  "manifest_version": 2,

  "name": "PGP",
  "description": "Protects your messages",
  "version": "0.5",
  "options_page": "options.html",

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage"
  ],
  
  "browser_action": {
    "default_icon": "lock.png",
    "default_popup": "popup.html"
  }
  
  
}